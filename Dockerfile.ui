FROM node:20.12-slim

WORKDIR /app
COPY ./skyvern-frontend /app
COPY ./entrypoint-skyvernui.sh /app/entrypoint-skyvernui.sh
RUN npm install

# IMPORTANT: Set these environment variables in Coolify!
# Do not hardcode them here - they need to match your deployment URLs
# 
# For Coolify/production:
# VITE_API_BASE_URL=https://your-backend-domain.com/api/v1
# VITE_WSS_BASE_URL=wss://your-backend-domain.com/api/v1
# VITE_ARTIFACT_API_BASE_URL=https://your-backend-domain.com:9090

CMD [ "/bin/bash", "/app/entrypoint-skyvernui.sh" ]

